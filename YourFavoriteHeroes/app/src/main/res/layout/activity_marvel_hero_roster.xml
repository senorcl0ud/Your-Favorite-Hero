<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MarvelHeroRoster"
    android:background="@android:color/black">


    <ImageView
        android:id="@+id/marvel_logo"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/marvel_logo"
    />


    <ImageView
        android:id="@+id/spiderman_banner"
        android:layout_width="wrap_content"
        android:layout_height="182dp"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/marvel_logo"
        android:scaleType="fitXY"
        android:src="@drawable/spider_man_banner" />

    <TextView
        android:id="@+id/spiderman_name"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:text="THE AMAZING SPIDER-MAN"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="#FFFF00"
        android:textSize="24sp"
        android:typeface="monospace"
        android:visibility="visible" />

    <Button
        android:id="@+id/spiderman_wikipedia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="23dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="157dp"
        android:text="Learn More" />

    <Button
        android:id="@+id/spiderman_videos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/spiderman_wikipedia"
        android:layout_marginEnd="41dp"
        android:layout_marginRight="41dp"
        android:text="Watch Videos" />

    <ImageView
        android:id="@+id/incredible_hulk_banner"
        android:layout_width="wrap_content"
        android:layout_height="182dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spiderman_banner"
        android:scaleType="fitXY"
        android:src="@drawable/hulk_poster" />

    <TextView
        android:id="@+id/hulk_name"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_centerInParent="true"
        android:text="THE INCREDIBLE HULK"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="#430C60"
        android:textSize="24dp"
        android:typeface="monospace"
        android:visibility="visible" />

    <Button
        android:id="@+id/hulk_wiki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/spiderman_name"
        android:layout_marginBottom="140dp"
        android:text="Learn More" />

    <Button
        android:id="@+id/hulk_videos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/spiderman_videos"
        android:layout_alignTop="@+id/hulk_wiki"
        android:text="Watch Videos" />

</RelativeLayout>